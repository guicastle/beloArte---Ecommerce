@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Finalizar Compra</title>
    <link rel="icon" href="~/Content/icons/logo.png" type="image/x-icon" />

    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/Site.css" rel="stylesheet" />
    <link href="~/Content/vendor/bootstrap/css/font-awesome.min.css" rel="stylesheet" />

    <style>
        .process-step .btn:focus {
            outline: none
        }

        .process {
            display: table;
            width: 100%;
            position: relative
        }

        .process-row {
            display: table-row
        }

        .process-step button[disabled] {
            opacity: 1 !important;
            filter: alpha(opacity=100) !important
        }

        .process-row:before {
            top: 40px;
            bottom: 0;
            position: absolute;
            content: " ";
            width: 100%;
            height: 1px;
            background-color: #ccc;
        }

        .process-step {
            display: table-cell;
            text-align: center;
            position: relative
        }

            .process-step p {
                margin-top: 4px
            }

        .btn-circle {
            width: 80px;
            height: 80px;
            text-align: center;
            font-size: 12px;
            border-radius: 50%
        }
    </style>

</head>
<body>
    @RenderPage("~/Views/_Navbar.cshtml")

    <hr />
    <div class="container" style="padding-top: 1.1%">
        <div class="row">
            <div class="process">
                <div class="process-row nav nav-tabs">
                    <div class="process-step">
                        <button type="button" class="btn btn-info btn-circle" id="btnInfoCliente" data-toggle="tab" href="#infoCliente" style="cursor: pointer"><i class="fa fa-file-text-o fa-3x"></i></button>
                        <p><small>Informações do Cliente</small></p>
                    </div>
                    <div class="process-step">
                        <button type="button" class="btn btn-default btn-circle" id="btnEndereco" data-toggle="tab" href="#endEntrega" style="cursor: pointer"><i class="fa fa-truck fa-3x"></i></button>
                        <p><small>Endereço de Entrega</small></p>
                    </div>
                    <div class="process-step">
                        <button type="button" class="btn btn-default btn-circle" data-toggle="tab" href="#finalizarCompra" style="cursor: pointer"><i class="fa fa-check fa-3x"></i></button>
                        <p><small>Formas de Pagamento</small></p>
                    </div>
                </div>
            </div>
            <div class="tab-content col-md-12">
                <div id="infoCliente" class="tab-pane fade active in show">
                    <h3>Informações do Cliente</h3>
                    <p>Só alguns dados, é rapidinho.</p>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label for="nome" style="font-weight: 200;">* Nome Completo</label>
                            <input type="text" class="form-control" id="nome" placeholder="Exemplo: José Marques da Silva" name="nome">
                        </div>
                        <div class="col-md-5">
                            <label for="email" style="font-weight: 200;">* Email</label>
                            <input type="email" class="form-control" id="email" placeholder="example@gmail.com" name="email">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label for="tel" style="font-weight: 200;">* Telefone</label>
                            <input type="tel" class="form-control" id="tel" placeholder="(31) 98584-7524" name="tel">
                        </div>
                        <div class="col-md-5">
                            <label for="dtnasc" style="font-weight: 200;">* Data de Nascimento</label>
                            <input class="form-control" id="dtnasc" placeholder="05/01/1996" name="dtnasc">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" style="padding-left: 0; font-weight: 100;">* Sexo</label>
                        <div class="col-sm-4" style="padding-left: 0">
                            <label class="radio-inline" style="font-weight: 200;">
                                <input type="radio" name="sexo" id="masculino" value="MASCULINO"> Masculino
                            </label>

                            <label class="radio-inline" style="font-weight: 200;">
                                <input type="radio" name="sexo" id="feminino" value="FEMININO"> Feminino
                            </label>

                        </div>
                    </div>

                    <ul class="list-unstyled list-inline pull-right">
                        <li><button type="button" class="btn btn-info next-step">Proximo <i class="fa fa-chevron-right"></i></button></li>
                    </ul>
                </div>
                <div id="endEntrega" class="tab-pane fade">
                    <h3>Endereço de Entrega</h3>
                    <p>Para onde você quer que entregue?</p>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <label style="font-weight: 200;">* CEP</label>
                            <input type="text" class="form-control" id="cep" placeholder="30888-298" name="cep">
                            <small>
                                <a href="http://www.buscacep.correios.com.br/servicos/dnec/index.do" target="_blank">Não sei meu CEP</a>
                            </small>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 200;">* Endereço</label>
                            <input type="text" class="form-control" id="rua" placeholder="Exemplo: Rua São Cristovão da Silva" name="endereco">
                        </div>
                        <div class="col-md-3">
                            <label style="font-weight: 200;">* Número</label>
                            <input type="number" class="form-control" id="numero" placeholder="007" name="numero">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 200;">* Cidade</label>
                            <input type="text" class="form-control" id="cidade" placeholder="Exemplo: Belo Horizonte" name="cidade">
                        </div>
                        <div class="col-md-5">
                            <label style="font-weight: 200;">* Estado</label>
                            <input type="text" class="form-control" id="uf" placeholder="Exemplo: Minas Gerais" name="estado">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 200;">* Bairro</label>
                            <input type="text" class="form-control" id="bairro" placeholder="Exemplo: Centro" name="bairro">
                        </div>
                        <div class="col-md-5">
                            <label style="font-weight: 200;">' Complemento</label>
                            <input type="text" class="form-control" id="complemento" placeholder="Exemplo: apt 501 (opcional)" name="complemento">
                        </div>
                    </div>

                    <ul class="list-unstyled pull-right row" style="margin-top: 2%;">
                        <li>
                            <button type="button" class="btn btn-default prev-step">
                                <i class="fa fa-chevron-left"></i> Anterior
                            </button>
                            <button type="button" class="btn btn-info next-step">
                                Proximo
                                <i class="fa fa-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </div>
                <!-- Aba Forma de Pagamento -->
                <div id="finalizarCompra" class="tab-pane fade">
                    <h3>Formas de Pagamento</h3>
                    <p>Escolha a melhor forma de pagamento.</p>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 400;">* Nome Impresso do Cartão</label>
                            <input type="text" class="form-control" id="nomeCartao" placeholder="Exemplo: José Rodrigues R. Marques" name="nomeCartao">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 400;">* Numero do cartão</label>
                            <input type="text" class="form-control" id="numCartao" placeholder="Exemplo: 8888-8888-5555-4444" name="numCartao">
                        </div>
                        <div class="col-md-3">
                            <label style="font-weight: 400;">* Código de Segurança</label>
                            <input type="text" class="form-control" id="cvc" placeholder="Exemplo: CVC" name="cvc">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-5">
                            <label style="font-weight: 400;">* Mês de Expiração</label>
                            <select class="form-control">
                                <option>--- Selecione o mês ---</option>
                                <option value="01">Janeiro (01)</option>
                                <option value="02">Feveiro (02)</option>
                                <option value="03">Março (03)</option>
                                <option value="04">Abril (04)</option>
                                <option value="05">Maio (05)</option>
                                <option value="06">Junho (06)</option>
                                <option value="07">Julho (07)</option>
                                <option value="08">Agosto (08)</option>
                                <option value="09">Setembro (09)</option>
                                <option value="10">Outubro (10)</option>1
                                <option value="11">Novembro (11)</option>
                                <option value="12">Dezembro (12)</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label style="font-weight: 400;">* Ano de Expiração</label>
                            <select class="form-control">
                                <option>--- Selecione o ano ---</option>
                                <option value="13">2013</option>
                                <option value="14">2014</option>
                                <option value="15">2015</option>
                                <option value="16">2016</option>
                                <option value="17">2017</option>
                                <option value="18">2018</option>
                                <option value="19">2019</option>
                                <option value="20">2020</option>
                                <option value="21">2021</option>
                                <option value="22">2022</option>
                                <option value="23">2023</option>
                                <option value="24">2024</option>
                                <option value="25">2025</option>
                                <option value="26">2026</option>
                                <option value="27">2027</option>
                            </select>
                        </div>
                    </div>

                    <ul class="list-unstyled pull-right row">
                        <li>
                            <button type="button" class="btn btn-default prev-step">
                                <i class="fa fa-chevron-left"></i> Anterior
                            </button>
                            <button type="button" class="btn btn-success next-step">
                                <i class="fa fa-check"></i> Finalizar Compra
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- /Scripts -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/popper/popper.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/vendor/jquery/dist/jquery.mask.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            aplicarMascaras();


            $("#infoCliente :input").blur(function () {
                if (validaAbaCliente() == true) {
                    $('#btnInfoCliente').removeClass('btn-info').addClass('btn-success');
                } else {
                    $('#btnInfoCliente').removeClass('btn-success').addClass('btn-info');
                } 
            });

            $("#endEntrega :input").blur(function () {
                if (validaAbaEndereco() == true) {
                    $('#btnEndereco').removeClass('btn-info').addClass('btn-success');
                } else {
                    $('#btnEndereco').removeClass('btn-success').addClass('btn-info');
                } 

            });

        });

        function aplicarMascaras() {
            $('#tel').mask('(00) 99999-9999');
            $('#dtnasc').mask('00/00/0000');
            $('#cep').mask('00000-000');

        }

        function validaAbaCliente() {
            var nome = $('#nome').val();
            var email = $('#email').val();
            var telefone = $('#tel').val();
            var dtnascimento = $('#dtnasc').val();
            var masculino = $('#masculino:checked').val();
            var feminino = $('#feminino:checked').val();

            if ((nome == "") || (email == "") || (telefone == "") || (dtnascimento == "") || ((typeof masculino === "undefined") && (typeof feminino === "undefined")))
                return false;

            return true;
        }

        function validaAbaEndereco() {
            var cep = $('#cep').val();
            var rua = $('#rua').val();
            var numero = $('#numero').val();
            var cidade = $('#cidade').val();
            var uf = $('#uf').val();
            var bairro = $('#bairro').val();

            if ((cep == "") || (rua == "") || (numero == "") || (cidade == "") || (uf == "") || (bairro == ""))
                return false;

            return true;
        }

        function validaAbaFormaPagto() {

        }

        $(function () {
            $('.btn-circle').on('click', function () {
                $('.btn-circle.btn-info').removeClass('btn-info').addClass('btn-default');
                $(this).addClass('btn-info').removeClass('btn-default').blur();
            });

            $('.next-step, .prev-step').on('click', function (e) {
                var $activeTab = $('.tab-pane.active');

                $('.btn-circle.btn-info').removeClass('btn-info').addClass('btn-default');

                if ($(e.target).hasClass('next-step')) {
                    var nextTab = $activeTab.next('.tab-pane').attr('id');
                    $('[href="#' + nextTab + '"]').addClass('btn-info').removeClass('btn-default');
                    $('[href="#' + nextTab + '"]').tab('show');
                }
                else {
                    var prevTab = $activeTab.prev('.tab-pane').attr('id');
                    $('[href="#' + prevTab + '"]').addClass('btn-info').removeClass('btn-default');
                    $('[href="#' + prevTab + '"]').tab('show');
                }
            });
        });
    </script>

</body>
</html> 